<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:backgroundTint="@color/jourItem"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relativeparentPharJour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/zonePhoto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_holiday_village_24"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/nomZoneJour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/zonePhoto"
                android:text="Nom Zone"
                android:textSize="19dp"

                android:textStyle="italic"/>

            <TextView
                android:id="@+id/nomPharmacieJour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zonePhoto"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="18dp"
                android:padding="12dp"
                android:text="Nom Pharmacie"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linearchildPharJour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            >


            <TextView
                android:id="@+id/adressePharmacieJour"
                android:padding="6dp"
                android:textSize="22dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:text="Adresse de la Pharmacie"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_phone_24"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"
                    />

                <TextView
                    android:id="@+id/numPhonePharmNuit"
                    android:layout_width="wrap_content"
                    android:text="02837949002"
                    android:textSize="18dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/btnLocalJour"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_add_location_24"
                    android:textStyle="bold"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="70dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/heureOuverture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ouvert De 9:30 Ã  12:30"
                android:layout_marginLeft="20dp"
                android:textSize="19dp"
                android:layout_marginBottom="5dp"
                />


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>