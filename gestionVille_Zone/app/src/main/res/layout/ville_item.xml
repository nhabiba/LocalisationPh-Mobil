<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#BCEDBB"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:srcCompat="@drawable/ic_baseline_location_city_24" />

            <TextView
                android:id="@+id/nomVille"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Nom Ville" />

            <TextView
                android:id="@+id/countPharByVille"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nomVille"
                android:layout_alignEnd="@+id/nomVille"
                android:layout_marginStart="13dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="13dp"
                android:layout_toEndOf="@+id/imageView3"
                android:text="15 Pharmacies"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="23dp"
                android:textSize="18dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>